{
  "name": "ghost-platform",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "imports": {
    "#src/*": "./src/*",
    "#root/*": "./*"
  },
  "scripts": {
    "dev": "dotenvx run -f .env.development.local -f .env.development -f .env -- nodemon src/index.js",
    "start": "node src/index.js",
    "test": "NODE_ENV=TEST dotenvx run -f .env.test.local -f .env.test -- vitest --run",
    "test:watch": "NODE_ENV=TEST dotenvx run -f .env.test.local -f .env.test -- vitest",
    "test:coverage": "NODE_ENV=TEST dotenvx run -f .env.test.local -f .env.test -- vitest --coverage",
    "db:migrate": "dotenvx run -f .env.development.local -f .env.development -f .env -- knex migrate:latest",
    "db:migrate:test": "NODE_ENV=TEST dotenvx run -f .env.test.local -f .env.test -- knex migrate:latest",
    "db:seed": "dotenvx run -f .env.development.local -f .env.development -f .env -- knex seed:run",
    "cleanup-worker": "node src/background/managers/cleanup.js",
    "cleanup-worker-dev": "dotenvx run -f .env.development.local -f .env.development -f .env -- nodemon src/background/managers/cleanup.js",
    "ghost-worker": "node src/background/managers/ghost.js",
    "ghost-worker-dev": "dotenvx run -f .env.development.local -f .env.development -f .env -- nodemon src/background/managers/ghost.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@clerk/express": "^1.3.28",
    "@dotenvx/dotenvx": "^1.0.0",
    "@taskforcesh/bullmq-pro": "^7.35.2",
    "bullmq": "^5.0.0",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.2",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash-es": "^4.17.21",
    "node-cron": "^3.0.0",
    "objection": "^3.1.4",
    "openai": "^4.104.0",
    "pg": "^8.11.5",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "sharp": "^0.33.0",
    "svix": "^1.25.0",
    "throng": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "vitest": "^2.0.0"
  },
  "author": "",
  "license": "ISC",
  "description": "Ghost - AI-powered social media assistant platform"
}
